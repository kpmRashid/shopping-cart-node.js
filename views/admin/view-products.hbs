<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="height: 50px; width: 50px;" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete: {{this.Name}}')">Delete</a>
        </td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>